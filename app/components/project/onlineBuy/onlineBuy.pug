mixin onlineBuy(content)  
  section#onlineBuy.onlineBuy
    .onlineBuy__content
      .onlineBuy__row 
        h2.onlineBuy__title!= content.title
      .onlineBuy__video
        p.onlineBuy__video-text!= content.videoText
        .onlineBuy__button-img 
          img(src!=content.videoImg.img, alt!=content.videoImg.alt)
      .onlineBuy__bottom-block
        .onlineBuy__list 
          +carousel(content.imgItems, "columnsDescription")(data-carousel="carouselOnlineBuy")
        .onlineBuy__pagination
        +button(content.button)

mixin columnsDescription(content, params) 
  .onlineBuy__column&attributes(attributes)
    .onlineBuy__img 
      img(src!=content.img.img, alt!=content.img.alt)
    p.onlineBuy__name!= content.name
    p.onlineBuy__text!= content.text



